<?xml version="1.0" encoding="utf-8" ?>
<root>
  <ruler type="keyword" splitter=" ,">
    <!--keyword-->
    <rule type="match">
      <keyword>.equ</keyword>
      <keyword>.macro</keyword>
      <keyword>.byte</keyword>
      <keyword>.word</keyword>
      <keyword>.hword</keyword>
      <keyword>.endm</keyword>
    </rule>
    <!--comment-->
    <rule type="prefix">
      <keyword>@</keyword>
      <keyword>//</keyword>
    </rule>
    <!--number-->
    <rule type="start">
      <keyword>0</keyword>
      <keyword>1</keyword>
      <keyword>2</keyword>
      <keyword>3</keyword>
      <keyword>4</keyword>
      <keyword>5</keyword>
      <keyword>6</keyword>
      <keyword>7</keyword>
      <keyword>8</keyword>
      <keyword>9</keyword>
    </rule>
  </ruler>
  <styles>
    <!--keyword-->
    <style>
      <foreground>#FF0000FF</foreground>
      <background>#00000000</background>
      <fontstyle>normal</fontstyle>
      <fontweight>bold</fontweight>
      <fontstretch>normal</fontstretch>
    </style>
    <!--comment-->
    <style>
      <foreground>#FF57A64A</foreground>
      <background>#00000000</background>
      <fontstyle>normal</fontstyle>
      <fontweight>normal</fontweight>
      <fontstretch>normal</fontstretch>
    </style>
    <!--number-->
    <style>
      <foreground>#FFFF0000</foreground>
      <background>#00000000</background>
      <fontstyle>normal</fontstyle>
      <fontweight>normal</fontweight>
      <fontstretch>normal</fontstretch>
    </style>
  </styles>
</root>
