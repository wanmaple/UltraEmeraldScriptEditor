<?xml version="1.0" encoding="utf-8" ?>
<root>
  <ruler type="regex" splitter=" ,+-*/&amp;|^&lt;&gt;">
    <!--keyword-->
    <rule type="regex">
      <keyword>^.equ$</keyword>
      <keyword>^.macro$</keyword>
      <keyword>^.byte$</keyword>
      <keyword>^.word$</keyword>
      <keyword>^.hword$</keyword>
      <keyword>^.endm$</keyword>
      <keyword>^.global$</keyword>
      <keyword>^.string$</keyword>
    </rule>
    <!--comment-->
    <rule type="prefix">
      <keyword>@</keyword>
      <keyword>//</keyword>
    </rule>
    <!--number-->
    <rule type="regex">
      <!--<keyword>^[-+]?\d+(\.\d+)?$</keyword>-->
      <keyword>^[-+]?\d+$</keyword>
      <keyword>^[-+]?0[xX][0-9a-fA-F]+$</keyword>
    </rule>
    <!--include-->
    <rule type="prefix">
      <keyword>.include</keyword>
    </rule>
    <!--address search-->
    <rule type="regex">
      <keyword>^.freespace$</keyword>
      <keyword>^.org$</keyword>
    </rule>
    <!--string-->
    <rule type="regex">
      <keyword>\"([^\"\\]|\")*\"</keyword>
    </rule>
  </ruler>
  <styles>
    <!--keyword-->
    <style>
      <foreground>#FF0000FF</foreground>
      <background>#00000000</background>
      <fontstyle>normal</fontstyle>
      <fontweight>normal</fontweight>
      <fontstretch>normal</fontstretch>
    </style>
    <!--comment-->
    <style>
      <foreground>#FF57A64A</foreground>
      <background>#00000000</background>
      <fontstyle>normal</fontstyle>
      <fontweight>normal</fontweight>
      <fontstretch>normal</fontstretch>
    </style>
    <!--number-->
    <style>
      <foreground>#FFFF0000</foreground>
      <background>#00000000</background>
      <fontstyle>normal</fontstyle>
      <fontweight>normal</fontweight>
      <fontstretch>normal</fontstretch>
    </style>
    <!--include-->
    <style>
      <foreground>#FF7D7D7D</foreground>
      <background>#00000000</background>
      <fontstyle>normal</fontstyle>
      <fontweight>normal</fontweight>
      <fontstretch>normal</fontstretch>
    </style>
    <!--address search-->
    <style>
      <foreground>#FF4EC9B0</foreground>
      <background>#00000000</background>
      <fontstyle>normal</fontstyle>
      <fontweight>normal</fontweight>
      <fontstretch>normal</fontstretch>
    </style>
    <!--string-->
    <style>
      <foreground>#FFD69D85</foreground>
      <background>#00000000</background>
      <fontstyle>normal</fontstyle>
      <fontweight>normal</fontweight>
      <fontstretch>normal</fontstretch>
    </style>
  </styles>
</root>
