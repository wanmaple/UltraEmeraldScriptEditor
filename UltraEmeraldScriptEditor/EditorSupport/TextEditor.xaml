<UserControl x:Class="EditorSupport.TextEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EditorSupport"
             xmlns:render="clr-namespace:EditorSupport.Rendering"
             xmlns:edit="clr-namespace:EditorSupport.Editing"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <edit:EditView x:Name="editor" CanContentEdit="True" CanContentScroll="True" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <render:RenderView Syntax="PScript">
                <render:RenderView.GlyphOption>
                    <render:GlyphProperties FontFamily="Lucida Console" FontSize="15" />
                </render:RenderView.GlyphOption>
            </render:RenderView>
        </edit:EditView>
    </Grid>
</UserControl>
